package dailytask;
public class Forrev {
		public static void main(String[] args) {
			for(int i=100; i>=50; i--)
			{
				if(i%2==0)
				System.out.println(i);
			}
			for(int i=100; i>=50; i--)
			{
				if(i%4==0)
				System.out.println(i);
			}
			for(int i=100; i>=50; i--)
			{
				if(i%4==0 && i%2==0)
				System.out.println(i);
			}
			int rows=6;
			for(int i=rows; i>=1; i--)
			{
				for(int j=1; j<=i; j++)
				{
					System.out.print("*");
				}
				System.out.println("");
			}
		}

	}
